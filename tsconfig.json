{
    "compilerOptions": {
        "lib": ["es5", "es6","dom"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "./src"
       
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.tests.ts",
        "src/**/*.test.ts",
    ]
}
